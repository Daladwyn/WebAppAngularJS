@{
    ViewBag.Title = "Home Page";
}

<div ng-app="AngJS">

    <p>1+3={{1+3}}</p>

    <div ng-controller="myCtrl">

        <p>{{firstname}} {{lastname}}</p>
        <input type="text" ng-model="firstname" />
        <input type="text" ng-model="lastname" />
        <hr />
        <input type="text" ng-model="lookFor"  />

        <ul>
            <li ng-repeat="name in names | filter : lookFor">
            {{name}}
                 </li>
                    </ul>
        <div ng-controller="carCtrl">
            <input type="text" ng-model="lookFor" />

            <ul>
                <li ng-repeat="name in names | filter : lookFor">
                    {{name}}
                </li>
            </ul>

        </div>
    </div>

    <script>

        var app = angular.module('AngJS', []);
        app.controller('myCtrl', function ($scope) {
            $scope.firstname = "John";
            $scope.lastname = "Doe";
            $scope.lookFor = "";
            $scope.names = ["ulf", "Ali", "Ola", "Sven", "Adam"];
        });

        app.controller('carCtrl', function ($scope) {
            $scope.lookFor = "";
            $scope.names = ["Saab", "Volvo", "Opel", "Skoda", "Audi","BMW"];
        });
    </script>
</div>